{
  "name": "presentation-viewer",
  "displayName": "Presentation Viewer",
  "publisher": "klus3kk",
  "description": "View PPTX, PPT, ODP and KEY presentations directly inside VS Code",
  "version": "0.0.1",

  "icon": "resources/icon.png",
  "main": "./src/extension.ts",

  "scripts": {
    "compile": "tsc -p ./"
  },

  "engines": {
    "vscode": "^1.106.1"
  },

  "extensionKind": ["ui"],

  "galleryBanner": {
    "theme": "dark",
    "color": "#1e1e1e"
  },

  "categories": [
    "Other",
    "Visualization"
  ],

  "keywords": [
    "pptx",
    "ppt",
    "odp",
    "key",
    "keynote",
    "presentation",
    "slides",
    "viewer",
    "office",
    "preview"
  ],

  "repository": {
    "type": "git",
    "url": "https://github.com/Klus3kk/vscode-slides-viewer"
  },

  "activationEvents": [
    "onStartupFinished",
    "onCustomEditor:presentationViewer.viewer",
    "onCommand:presentationViewer.open"
  ],

  "contributes": {
    "commands": [
      {
        "command": "presentationViewer.open",
        "title": "Open Presentation"
      }
    ],
    "languages": [
      {
        "id": "pptx",
        "extensions": [".pptx", ".pptm", ".potx", ".potm", ".ppsx", ".ppsm"]
      },
      {
        "id": "ppt",
        "extensions": [".ppt", ".pps", ".pot"]
      },
      {
        "id": "odp",
        "extensions": [".odp"]
      },
      {
        "id": "keynote",
        "extensions": [".key"]
      }
    ],
    "customEditors": [
      {
        "viewType": "presentationViewer.viewer",
        "displayName": "Presentation Viewer",
        "selector": [
          { "filenamePattern": "*.pptx" },
          { "filenamePattern": "*.pptm" },
          { "filenamePattern": "*.potx" },
          { "filenamePattern": "*.potm" },
          { "filenamePattern": "*.ppsx" },
          { "filenamePattern": "*.ppsm" },
          { "filenamePattern": "*.ppt" },
          { "filenamePattern": "*.pps" },
          { "filenamePattern": "*.pot" },
          { "filenamePattern": "*.odp" },
          { "filenamePattern": "*.key" }
        ],
        "priority": "default"
      }
    ]
  },

  "dependencies": {
    "cfb": "^1.2.2",
    "jszip": "^3.10.1"
  },

  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "typescript": "^5.9.3"
  }
}
